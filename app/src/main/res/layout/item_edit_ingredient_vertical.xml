<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">


    <TextView
        android:id="@+id/text_item"
        style="@style/DefaultTextStyle"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/item_plant_name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quantity_item"
        style="@style/DefaultTextStyle"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/default_margin"
        android:singleLine="true"
        android:gravity="right"
        android:ellipsize="end"
        android:text="quanitty"
        app:layout_constraintBottom_toBottomOf="@+id/text_item"
        app:layout_constraintEnd_toStartOf="@+id/delete_ingredient"
        app:layout_constraintTop_toTopOf="@+id/text_item" />

    <ImageView
        android:id="@+id/delete_ingredient"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="@dimen/default_margin"
        android:src="@drawable/ic_action_name"
        app:layout_constraintBottom_toBottomOf="@+id/quantity_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/quantity_item"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>