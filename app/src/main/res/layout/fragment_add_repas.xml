<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:background="@color/background">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_plant_page_upload_button"
            android:background="@color/turquoise"
            style="@style/TitleTextStyle"
            android:textColor="@color/white"
            android:padding="@dimen/default_margin"/>

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/item_margin"
        android:textColorHint="@color/turquoise"
        android:hint="Nom du plat"
        style="@style/DefaultTextStyle"
        android:paddingLeft="@dimen/default_margin"/>

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/item_margin"
        android:hint="Description du plat"
        android:textColorHint="@color/turquoise"
        style="@style/DefaultTextStyle"
        android:paddingLeft="@dimen/default_margin"/>

    <EditText
        android:id="@+id/lien"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/item_margin"
        android:textColorHint="@color/turquoise"
        android:hint="Ajouter un lien utile pour la recette"
        android:maxLines="1"
        style="@style/DefaultTextStyle"
        android:paddingLeft="@dimen/default_margin"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/clock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/clock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/duree"
            style="@style/DefaultTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/turquoise"
            android:hint="45min"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clock"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/tags"
        style="@style/DefaultTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/turquoise"
        android:hint="Ajouter les tags de la recette"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/clock"
        app:layout_constraintStart_toEndOf="@+id/duree"
        app:layout_constraintTop_toTopOf="@+id/clock" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_ingredient"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/add_ingredient"
            app:layout_constraintStart_toStartOf="@+id/ingredient"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ingredient"
            style="@style/DefaultTextStyle"
            android:textColorHint="@color/turquoise"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:hint="IngrÃ©dients"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@+id/list_ingredient"
            app:layout_constraintTop_toBottomOf="@+id/list_ingredient" />

        <EditText
            android:id="@+id/quantite"
            style="@style/DefaultTextStyle"
            android:layout_width="100dp"
            android:textColorHint="@color/turquoise"
            android:layout_height="80dp"
            android:hint="40g"
            android:maxLines="1"
            android:paddingLeft="@dimen/default_margin"
            app:layout_constraintBottom_toBottomOf="@+id/ingredient"
            app:layout_constraintStart_toEndOf="@+id/ingredient"
            app:layout_constraintTop_toTopOf="@+id/ingredient" />


        <Button
            android:id="@+id/add_ingredient"
            android:layout_width="50dp"
            android:layout_height="52dp"
            android:background="@color/turquoise"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/quantite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quantite"
            app:layout_constraintTop_toTopOf="@+id/quantite" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/recette"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/item_margin"
        android:textColorHint="@color/turquoise"
        android:hint="Ajouter la recette"
        android:maxLines="1"
        style="@style/DefaultTextStyle"
        android:paddingLeft="@dimen/default_margin"/>


    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/turquoise"
        android:text="@string/add_plant_page_confirm_button"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="@dimen/default_margin"
        />

</LinearLayout>
</ScrollView>